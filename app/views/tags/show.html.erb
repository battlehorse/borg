<%= content_for :youarehere do %>
  <%= render :partial => "shared/breadcrumbs", :locals => {:crumbs => [["Tags", {:controller => "tags"}], [@tag, tag_path(@tag)]]} %>
<% end %>
<%= content_for :intro do %>
	<h1>Tag: <%= @tag %></h1>

	<p>The following articles match the tag <strong><%= @tag %></strong>:</p>
<% end %>
<% for page in @pages %>
	<%= render :partial => "shared/summary" , :object => page %>
<% end %>
<%= render :partial => "shared/nothing" if @pages.empty? %>
